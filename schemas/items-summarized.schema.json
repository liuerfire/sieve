{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Items Summarized",
  "description": "Summarized RSS items",
  "type": "object",
  "required": ["source_name", "source_url", "total_items", "items"],
  "additionalProperties": false,
  "properties": {
    "source_name": {
      "type": "string",
      "description": "RSS source name"
    },
    "source_url": {
      "type": "string",
      "description": "RSS source URL"
    },
    "source_title": {
      "type": "string",
      "description": "RSS source title"
    },
    "total_items": {
      "type": "integer",
      "minimum": 0,
      "description": "Total items count"
    },
    "items": {
      "type": "array",
      "description": "Item list",
      "items": {
        "type": "object",
        "required": ["guid", "title", "link", "pubDate", "description"],
        "additionalProperties": false,
        "properties": {
          "guid": {
            "type": "string",
            "description": "Item unique identifier"
          },
          "title": {
            "type": "string",
            "description": "Summarized title (in preferred language)"
          },
          "link": {
            "type": "string",
            "description": "Item link"
          },
          "pubDate": {
            "type": "string",
            "description": "Publish date"
          },
          "description": {
            "type": "string",
            "description": "HTML formatted summary"
          }
        }
      }
    }
  }
}
